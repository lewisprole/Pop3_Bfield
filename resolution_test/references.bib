@article{Vaytet2018,
  title = {Protostellar Birth with Ambipolar and Ohmic Diffusion},
  author = {Vaytet, N. and Commer{\c c}on, B. and Masson, J. and Gonz{\'a}lez, M. and Chabrier, G.},
  year = {2018},

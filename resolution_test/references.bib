@article{Klessen2010,
  title = {Accretion-Driven Turbulence as Universal Process: Galaxies, Molecular Clouds, and Protostellar Disks},
  shorttitle = {Accretion-Driven Turbulence as Universal Process},
  author = {Klessen, R. S. and Hennebelle, P.},
  year = {2010},
  month = sep,
